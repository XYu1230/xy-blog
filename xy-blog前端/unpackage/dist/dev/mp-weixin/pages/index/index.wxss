.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}
.refresh-tip {
  text-align: center;
  padding: 10rpx 0;
  color: #999;
  font-size: 26rpx;
}
.blog-list {
  width: 100%;
}
.blog-item {
  margin-bottom: 20rpx;
}
.blog-header {
  margin-bottom: 20rpx;
}
.blog-author {
  font-size: 28rpx;
}
.author-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.author-name {
  color: #333;
  font-weight: 500;
}
.blog-time {
  font-size: 24rpx;
  color: #999;
}
.blog-content {
  margin-bottom: 20rpx;
}
.blog-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}
.blog-summary {
  font-size: 28rpx;
  color: #666;
  display: block;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.blog-footer {
  border-top: 1px solid #eee;
  padding-top: 20rpx;
}
.stat-item {
  margin-right: 30rpx;
}
.iconfont {
  font-size: 32rpx;
  color: #999;
}
.icon-like-filled {
  color: #FF6B6B;
}
.stat-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 6rpx;
}
.blog-tags {
  display: flex;
  flex-wrap: wrap;
}
.tag {
  padding: 6rpx 16rpx;
  background-color: #f0f8ff;
  color: #007AFF;
  border-radius: 30rpx;
  font-size: 22rpx;
  margin-left: 10rpx;
}
.load-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
}
.load-more-text {
  color: #007AFF;
  font-size: 28rpx;
}
.no-more-text {
  color: #999;
  font-size: 28rpx;
}
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}
.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.empty-text {
  color: #999;
  font-size: 28rpx;
}